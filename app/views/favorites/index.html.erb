<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <%#= image_tag 'icons/heart.png', class: 'topic-index-icon' %>
            <% if topic.favorite_users.include?(current_user)  %>
             <%= link_to favorites_path(topic_id: topic.id),method: :delete do %>
              <%#= image_tag "icons/heart.png", class: "topic-index-icon" %>
              <i class = "fas fa-heart unlike-btn"></i> 
              <div class = "count"><%= topic.favorites.count %></div>
             <% end %>
            <% else %>
             <%=link_to favorites_path(topic_id: topic.id),method: :post do %>
              <%#= image_tag 'icons/heart-black.png', class: 'topic-index-icon' %>
              <i class = "far fa-heart like-btn"></i>  
              <div class = "count"> <%= topic.favorites.count %></div>
             <% end %>
            <% end %>
            
            <%= link_to topics_comment_path(topic_id: topic.id) do %>
                <i class="far fa-comment comment-btn"></i>
              <% end %>
            <%#= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            
            
            <p class="topic-text">
              <%= topic.description %>
            </p>
            
            <div class="comment-index-wrapper">  
              <div class = "comment-spot">
                <p>コメント</p>
              </div>
              
              <% topic.comments.each do |comment| %>
                <div class = "topic-index-item">
                  <%= comment.comment %>
                </div>
              <% end %>
              
            </div>  
            
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
